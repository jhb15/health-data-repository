@model IEnumerable<HealthDataRepository.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesBurnt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageHeartRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StepsTaken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetresTravelled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetresElevationGained)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaloriesBurnt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageHeartRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StepsTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetresTravelled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetresElevationGained)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
