@model HealthDataRepository.Models.ActivityMapping

    <form asp-controller="ActivityMappings" asp-action="Create">
        <input type="hidden" name="ActivityTypeId" value="@ViewData["ActivityTypeId"]" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Source" class="control-label"></label>
            <select asp-for="Source" asp-items="Html.GetEnumSelectList<DataSource>()" class="form-control"></select>
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MappingKey" class="control-label"></label>
            <input asp-for="MappingKey" class="form-control" />
            <span asp-validation-for="MappingKey" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
